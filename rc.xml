<labwc_config>
  <core>
    <gap>1</gap>
  </core>
  <theme>
    <name>Clia-Black</name>
    <cornerRadius>10</cornerRadius>
    <font name="JetBrainsMono Nerd Font" size="16"/>
  </theme>
  <focus>
    <followMouse>yes</followMouse>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <snapping>
    <range>1</range>
    <topMaximize>yes</topMaximize>
  </snapping>
  <keyboard>
    <default/>
    <keybind key="W-S-BackSpace">
      <action name="systemctl -i poweroff"/>
    </keybind>
    <keybind key="W-q">
      <action name="Close"/>
    </keybind>
    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>
    <keybind key="W-Return">
      <action name="Execute" command="kitty"/>
    </keybind>
    <keybind key="W-A-n">
      <action name="Execute" command="waypaper"/>
    </keybind>
    <keybind key="W-w">
      <action name="Execute" command="/home/test/.config/waybar/./labwc-waybar-hide.sh"/>
    </keybind>
    <keybind key="W-A-p">
      <action name="Execute" command="pcmanfm"/>
    </keybind>
    <keybind key="W-d">
      <action name="Execute" command="rofi -show run"/>
    </keybind>
    <keybind key="W-r">
      <action name="Execute" command="labwc -r"/>
    </keybind>
    <keybind key="W-m">
      <action name="Exit"/>
    </keybind>
    <keybind key="W-k">
      <action name="ToggleMaximize"/>
      <action name="Focus"/>
      <action name="Raise"/>
    </keybind>
    <keybind key="W-o">
      <action name="GoToDesktop" to="left"/>
    </keybind>
    <keybind key="W-p">
      <action name="GoToDesktop" to="Right"/>
    </keybind>
    <keybind key="W-TAB">
      <action name="GoToDesktop" to="Right"/>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1"/>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2"/>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3"/>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4"/>
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="pamixer -d 10"/>
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="pamixer -i 10"/>
    </keybind>
    <keybind key="XF86_AudioMute">
      <action name="Execute" command="pamixer sset Master toggle"/>
    </keybind>
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl -q set 2%+"/>
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl -q set 2%-"/>
    </keybind>
  </keyboard>
  <mouse>
    <default/>
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Middle" action="Press">
        <action name="ShowMenu" menu="rightmenu"/>
      </mousebind>
    </context>
    <context name="Root">
      <mousebind button="Left" action="Press">
        <action name="ShowMenu" menu="rightmenu"/>
      </mousebind>
    </context>
  </mouse>
  <desktops>
    <popupTime>1000</popupTime>
    <names>
      <name>I</name>
      <name>II</name>
      <name>III</name>
      <name>IIII</name>
    </names>
  </desktops>
  <libinput>
    <device>
      <naturalScroll>no</naturalScroll>
    </device>
  </libinput>
</labwc_config>
